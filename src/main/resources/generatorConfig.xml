<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="FactoryDB" targetRuntime="MyBatis3Simple">
        <jdbcConnection driverClass="org.h2.Driver"
                        connectionURL="jdbc:h2:~/h2database/FactoryDB;AUTO_SERVER=TRUE"
                        userId="sa"
                        password="sa">
        </jdbcConnection>

        <javaModelGenerator targetPackage="todr.mybatis.model" targetProject="MAVEN" />

        <sqlMapGenerator targetPackage="todr.usecases.mybatis.xml" targetProject="MAVEN" />
        <javaClientGenerator type="XMLMAPPER" targetPackage="todr.mybatis.dao" targetProject="MAVEN" />

        <table schema="public" tableName="producer">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
        </table>
        <table schema="public" tableName="product">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
        </table>
        <table schema="public" tableName="receiver">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
        </table>
        <table schema="public" tableName="receiver_product">
        </table>
    </context>
</generatorConfiguration>